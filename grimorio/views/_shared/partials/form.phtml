    if ( strstr($col_type, 'tinyint(') )
    {
        ?>
        <div class="col s12 m6 l3 switch">
            <label for="<?=$col?>">
                <span class="<?=$color_text?>"><?=ucfirst(empty($labels)?$col:$labels[$col])?></span><br>
                Off
